{
    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/index.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch tests in debug",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "args": ["${file}", "--no-timeouts"],
            "outFiles": [],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "launch express test",
            "program": "${workspaceRoot}/src/expressTest.js",
            "cwd": "${workspaceRoot}"
        },
         {
            "type": "node",
            "request": "launch",
            "name": "unit tests",
            "program": "${workspaceRoot}/node_modules/.bin/_mocha",
            "env": {},
            "args": [
                "--recursive",
                "--colors",
                "--no-timeouts",
                "${workspaceRoot}/test/"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}